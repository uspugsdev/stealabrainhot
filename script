-- üî¢ Campo num√©rico para Amount
local currentValue = 1

Sec:TextBox{
    Name = "Valor da Amount",
    Description = "Digite o valor desejado.",
    Default = "100",
    Callback = function(input)
        local num = tonumber(input)
        if num then
            currentValue = num

            -- Aplica valor em Amount se for TextLabel ou outra propriedade
            local amountObj = workspace:FindFirstChild("Multiplier") and workspace.Multiplier:FindFirstChild("Main") and workspace.Multiplier.Main:FindFirstChild("Amount")
            if amountObj then
                if amountObj:IsA("TextLabel") or amountObj:IsA("TextButton") then
                    amountObj.Text = tostring(num)
                elseif amountObj:IsA("NumberValue") then
                    amountObj.Value = num
                elseif amountObj:IsA("BasePart") then
                    amountObj.Size = Vector3.new(num, amountObj.Size.Y, amountObj.Size.Z)
                end
            end
            print("Valor atualizado para:", num)
        else
            warn("Entrada inv√°lida: digite um n√∫mero.")
        end
    end
}
