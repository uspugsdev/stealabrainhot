-- üé® Interface de ferramentas
local Lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/uspugsdev/stealabrainhot/refs/heads/main/script"))()
local UI = Lib:Create{ Theme = "Dark", Size = UDim2.new(0, 555, 0, 300) }
local Main = UI:Tab{ Name = "Main" }
local Tools = Main:Divider{ Name = "Ferramentas" }

-- üîß Servi√ßos principais
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Camera = workspace.CurrentCamera
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local HRP = Character:WaitForChild("HumanoidRootPart")

-- üßë‚Äçüíª Lista de donos com nomes
local donos = { "SeuNomeAqui", "OutroNomeDev" } -- coloque seu nome exato aqui
local IS_OWNER = table.find(donos, LocalPlayer.Name) ~= nil

-- üîê Prote√ß√µes contra kick e teleport
if IS_OWNER then
    LocalPlayer.Kick = function() return end
    for _, obj in ipairs(getgc(true)) do
        if type(obj) == "function" and islclosure(obj) then
            local info = debug.getinfo(obj)
            if info.name and (info.name:lower():find("kick") or info.name:lower():find("teleport")) then
                hookfunction(obj, function() return end)
            end
        end
    end
end

-- üö´ Remo√ß√£o de teleportadores da workspace
workspace.DescendantAdded:Connect(function(desc)
    if desc:IsA("BasePart") and desc.Name:lower():find("teleport") then
        desc:Destroy()
    end
end)

-- üëÄ Revelar tudo invis√≠vel
local function revelarTudo()
    for _, part in ipairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") and part.Transparency > 0 then
            part.Transparency = 0
            part.CanTouch = true
            part.CanQuery = true
        end
    end
end

-- üëü WalkSpeed funcional
local WALKSPEED_ENABLED = false
local function updateWalkSpeed()
    local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    local hum = char:FindFirstChildOfClass("Humanoid")
    if hum then hum.WalkSpeed = WALKSPEED_ENABLED and 32 or 16 end
end
LocalPlayer.CharacterAdded:Connect(function()
    Character = LocalPlayer.Character
    updateWalkSpeed()
end)

-- üöÄ Fly com WASD
local FLY_ENABLED = false
local flySpeed = 50
RunService.RenderStepped:Connect(function()
    if FLY_ENABLED and HRP then
        local dir = Vector3.zero
        if UserInputService:IsKeyDown(Enum.KeyCode.W) then dir += Camera.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.S) then dir -= Camera.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.A) then dir -= Camera.CFrame.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.D) then dir += Camera.CFrame.RightVector end
        HRP.Velocity = dir.Unit * flySpeed
    end
end)

-- üå´Ô∏è Noclip agressivo
local NOCLIP_ENABLED = false
RunService.Stepped:Connect(function()
    if NOCLIP_ENABLED and Character then
        for _, part in ipairs(Character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.CanCollide = false
                part.CanTouch = false
                part.CanQuery = false
            end
        end
    end
end)

-- üîé ESP dos jogadores
local espBoxes = {}
local ESP_ENABLED = false
local function createESP(player)
    if player ~= LocalPlayer then
        local box = Drawing.new("Text")
        box.Visible = false
        box.Color = Color3.fromRGB(0, 255, 255)
        box.Size = 14
        box.Center = true
        box.Outline = true
        box.Text = player.Name
        espBoxes[player] = box
    end
end
for _, p in pairs(Players:GetPlayers()) do createESP(p) end
Players.PlayerAdded:Connect(createESP)
RunService.RenderStepped:Connect(function()
    if ESP_ENABLED then
        for player, box in pairs(espBoxes) do
            local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
            if hrp then
                local pos, visible = Camera:WorldToViewportPoint(hrp.Position)
                box.Position = Vector2.new(pos.X, pos.Y)
                box.Visible = visible
            else
                box.Visible = false
            end
        end
    else
        for _, box in pairs(espBoxes) do box.Visible = false end
    end
end)

-- üéõÔ∏è Painel de bot√µes
Tools:Toggle{
    Name = "ESP All",
    Description = "Mostra nomes dos jogadores.",
    Callback = function(state) ESP_ENABLED = state end
}
Tools:Toggle{
    Name = "Fly",
    Description = "Voo com WASD.",
    Callback = function(state) FLY_ENABLED = state end
}
Tools:Toggle{
    Name = "Noclip Total",
    Description = "Atravessa tudo.",
    Callback = function(state) NOCLIP_ENABLED = state end
}
Tools:Toggle{
    Name = "Speed Boost",
    Description = "Aumenta velocidade.",
    Callback = function(state)
        WALKSPEED_ENABLED = state
        updateWalkSpeed()
    end
}
Tools:Button{
    Name = "Revelar Invis√≠veis",
    Description = "Deixa tudo vis√≠vel.",
    Callback = function()
        revelarTudo()
    end
}
