-- üé® Interface de Ferramentas
local Lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/uspugsdev/stealabrainhot/refs/heads/main/script"))()
local UI = Lib:Create{ Theme = "Dark", Size = UDim2.new(0, 555, 0, 300) }
local Main = UI:Tab{ Name = "Main" }
local Tools = Main:Divider{ Name = "Ferramentas" }

-- üîß Servi√ßos
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Camera = workspace.CurrentCamera
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local HRP = Character:WaitForChild("HumanoidRootPart")

-- üëü Speed Boost
local WALKSPEED_ENABLED = false
local function updateWalkSpeed()
    local hum = Character:FindFirstChildOfClass("Humanoid")
    if hum then hum.WalkSpeed = WALKSPEED_ENABLED and 32 or 16 end
end

-- üöÄ Fly
local FLY_ENABLED = false
local flySpeed = 50
RunService.RenderStepped:Connect(function()
    if FLY_ENABLED and HRP then
        local dir = Vector3.zero
        if UserInputService:IsKeyDown(Enum.KeyCode.W) then dir += Camera.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.S) then dir -= Camera.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.A) then dir -= Camera.CFrame.RightVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.D) then dir += Camera.CFrame.RightVector end
        HRP.Velocity = dir.Unit * flySpeed
    end
end)

-- üå´Ô∏è Noclip
local NOCLIP_ENABLED = false
RunService.Stepped:Connect(function()
    if NOCLIP_ENABLED and Character then
        for _, part in ipairs(Character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.CanCollide = false
            end
        end
    end
end)

-- üëÅÔ∏è ESP com BillboardGui
local ESP_ENABLED = false
local function createESP(player)
    local function attach()
        if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("Head") then
            local head = player.Character.Head
            if not head:FindFirstChild("ESPGui") then
                local billboard = Instance.new("BillboardGui", head)
                billboard.Name = "ESPGui"
                billboard.Size = UDim2.new(0, 100, 0, 20)
                billboard.Adornee = head
                billboard.AlwaysOnTop = true

                local label = Instance.new("TextLabel", billboard)
                label.Size = UDim2.new(1, 0, 1, 0)
                label.BackgroundTransparency = 1
                label.Text = player.Name
                label.TextColor3 = Color3.fromRGB(0, 255, 255)
                label.TextScaled = true
            end
        end
    end
    player.CharacterAdded:Connect(function() wait(1) attach() end)
    attach()
end
for _, p in pairs(Players:GetPlayers()) do createESP(p) end
Players.PlayerAdded:Connect(createESP)

-- ü´• Invisibilidade
local INVISIBILIDADE_ATIVADA = false
local function alternarInvisibilidade()
    for _, part in ipairs(Character:GetDescendants()) do
        if part:IsA("BasePart") or part:IsA("Decal") then
            part.Transparency = INVISIBILIDADE_ATIVADA and 1 or 0
        end
    end
end

-- üåç Subterr√¢neo
local SUBTERRANEO_ATIVADO = false
local alturaSubterranea = -100
local alturaNormal = workspace:FindFirstChild("Terrain") and workspace.Terrain.Position.Y + 10 or 10
local function alternarSubterraneo()
    if HRP then
        HRP.CFrame = CFrame.new(HRP.Position.X, SUBTERRANEO_ATIVADO and alturaSubterranea or alturaNormal, HRP.Position.Z)
    end
end

-- üëÅÔ∏è Revelar invis√≠veis
local function revelarTudo()
    for _, part in ipairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") and part.Transparency > 0 then
            part.Transparency = 0
            part.CanTouch = true
            part.CanQuery = true
        end
    end
end

-- üß† Painel de controles
Tools:Toggle{
    Name = "Speed Boost",
    Description = "Aumenta velocidade de andar.",
    Callback = function(state)
        WALKSPEED_ENABLED = state
        updateWalkSpeed()
    end
}
Tools:Toggle{
    Name = "Fly com WASD",
    Description = "Voo livre com teclas.",
    Callback = function(state)
        FLY_ENABLED = state
    end
}
Tools:Toggle{
    Name = "Noclip Total",
    Description = "Atravessa tudo.",
    Callback = function(state)
        NOCLIP_ENABLED = state
    end
}
Tools:Toggle{
    Name = "ESP All",
    Description = "Mostra nomes dos jogadores.",
    Callback = function(state)
        ESP_ENABLED = state
        for _, p in pairs(Players:GetPlayers()) do createESP(p) end
    end
}
Tools:Toggle{
    Name = "Invisibilidade",
    Description = "Deixa o jogador invis√≠vel.",
    Callback = function(state)
        INVISIBILIDADE_ATIVADA = state
        alternarInvisibilidade()
    end
}
Tools:Toggle{
    Name = "Subterr√¢neo",
    Description = "Anda abaixo do terreno e retorna.",
    Callback = function(state)
        SUBTERRANEO_ATIVADO = state
        alternarSubterraneo()
    end
}
Tools:Button{
    Name = "Revelar Invis√≠veis",
    Description = "Mostra todos os objetos escondidos.",
    Callback = function()
        revelarTudo()
    end
}
